[MASTER]
ignore=venv,migrations
load-plugins=pylint_django
django-settings-module=sample.settings

[MESSAGES CONTROL]
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    W0511,  # TODO comments
    R0903,  # too-few-public-methods
    R0801,  # duplicate-code
    R0902,  # too-many-instance-attributes
    R0904   # too-many-public-methods

[FORMAT]
max-line-length=120

[DESIGN]
max-args=10
max-locals=30
max-returns=6
max-branches=20
max-statements=100

[REPORTS]
output-format=text
reports=no

[TYPECHECK]
ignored-modules=django
ignored-classes=QuerySet,Manager
